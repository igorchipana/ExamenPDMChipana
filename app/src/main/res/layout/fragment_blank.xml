<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.igor.examenpdm_chipana.View.BlankFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lista"
            android:layout_width="150dp"
            android:layout_height="147dp"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Productos Disponibles" />

        <ListView
            android:id="@+id/lista1"
            android:layout_width="100dp"
            android:layout_height="147dp"
            android:layout_alignTop="@+id/lista"
            android:layout_toEndOf="@+id/lista" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lista1"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/textView4"
            android:text="Productos" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lista1"
            android:layout_centerHorizontal="true"
            android:text="Precio" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/textView4"
            android:text="Comprar" />

    </RelativeLayout>
</FrameLayout>
